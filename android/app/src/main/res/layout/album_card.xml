<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/background_color_selector"
    app:cardElevation="0dp"
    android:focusable="true"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/rl_card_container"
        android:layout_width="150dp"
        android:layout_height="210dp">

        <ImageView
            android:id="@+id/iv_album_card_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_outline"
            android:contentDescription="@string/album_card_image" />

        <TextView
            android:id="@+id/tv_album_card_first_line"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/iv_album_card_image"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_album_card_second_line"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/tv_album_card_first_line"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
